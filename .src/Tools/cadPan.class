' Tool maintained by Terco
Inherits ToolsBase
Create Static
Public Const Gender As String = "Pan"

Public Function Start(Optional ElemToBuild As Variant, Optional _Mode As Integer = 0) As Boolean

  clsDrawingAids.HelperTrabajo = ("Panning")

End

Public Function MouseDown(mouseX As Integer, mouseY As Integer) ' called by FCAD-> DrawingArea_MouseDown

  Me.SelStartX = mouseX
  Me.SelStartY = mouseY
  appmain.glarea1.Mouse = Mouse.SizeAll
  Me.active = True

End

Public Function MouseUp(mouseX As Integer, mouseY As Integer) ' called by FCAD-> DrawingArea_MouseUp

  appmain.glarea1.Mouse = Mouse.Cross
  Me.active = False

End

Public Function MouseMove(mouseX As Integer, mouseY As Integer) ' called by FCAD-> DrawingArea_MouseMove

  If Not Me.active Then Return
  gcd.CurrentDrawing.PanX += (mousex - Me.SelStartX)
  gcd.CurrentDrawing.PanY -= (mouseY - Me.SelStartY)

  Me.SelStartX = mouseX
  Me.SelStartY = mouseY
  appmain.redraw

End
