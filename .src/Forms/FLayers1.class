      For r = 0 To TableView1.Rows.Max
        If r <> TableView1.Row Then
          TableView1[r, 1].WordWrap = False
          TableView1[r, 1].Picture = Image.Load("./svg/layers/blank.svg").Stretch(21, 21).Picture
        Endif
      Next
  End Select

