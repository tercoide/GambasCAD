  Next

  TreeView1["DWG"].Expanded = True

  LSelect = Settings["Section/Selected", "DWG"]

  If TreeView1.Exist(LSelect) Then
    TreeView1[LSelect].Selected = True
  Else
    TreeView1["DWG"].Selected = True
  Endif

