Public Sub TreeView1_Select()

  Dim v As Variant
  'Dim vrt As Variant
  Dim r As Integer
  'Dim c As Integer
  Dim lay As New Collection
  Dim d As Float
  Dim i As Integer
  Dim sKey As String

  Settings["Section/Selected"] = TreeView1.Key

  Select TreeView1.Key
    Case "DWG"
      'Settings["Section/Selected"] = TreeView1.Key
      pnlFileData.Visible = True
      GridView1.Visible = False

    Case "LAYERS" ', "ENTITIES", "BLOCKS"
      'Settings["Section/Selected"] = TreeView1.Key
      GridView1.Clear
      lay.Clear
      pnlFileData.Visible = False
      GridView1.Visible = True
      GridView1.Columns.Count = 4 'gcd.CurrentDrawing.cModel[TreeView1.Key].Count
      'name, color, ltype
      If gcd.CurrentDrawing.cModel.Exist(TreeView1.Key) Then
        GridView1.Rows.Count = gcd.CurrentDrawing.cModel[TreeView1.Key].Count
        GridView1.Columns[0].Text = ("Name")
        GridView1.Columns[1].Text = ("Handle")
        GridView1.Columns[2].Text = ("Color")
        GridView1.Columns[3].Text = ("Line type")

        For Each v In gcd.CurrentDrawing.cModel[TreeView1.Key]
          If TypeOf(v) = gb.Object Then
            'lay.Add(v["name"], CStr(v["handle"][v["handle"].Max]))
            GridView1[r, 0].Text = v["name"]
            If v.Exist("handle") Then
              If TypeOf(v["handle"]) = gb.Object Then
                GridView1[r, 1].Text = CStr(v["handle"][v["handle"].Max])
              Else
                GridView1[r, 1].Text = CStr(v["handle"])
              Endif
            Else
              GridView1[r, 1].Text = "<>"
            Endif
            GridView1[r, 2].Text = v["color"]
            GridView1[r, 3].Text = "" 'v["ltype"]

          Endif
          Inc r
        Next
      Endif

    Case "ENTITIES"
      'Settings["Section/Selected"] = TreeView1.Key
      GridView1.Clear
      pnlFileData.Visible = False
      GridView1.Visible = True
      GridView1.Columns.Count = 7

      If gcd.CurrentDrawing.cModel.Exist(TreeView1.Key) Then
        GridView1.Rows.Count = gcd.CurrentDrawing.cModel[TreeView1.Key].Count
        GridView1.Columns[0].Text = ("Entity")
        GridView1.Columns[1].Text = ("Handle")
        GridView1.Columns[2].Text = ("Layer")
        GridView1.Columns[3].Text = ("Style")
        GridView1.Columns[4].Text = ("Weight")
        GridView1.Columns[5].Text = ("Color")
        GridView1.Columns[6].Text = ("Particular")

        For Each v In gcd.CurrentDrawing.cModel[TreeView1.Key]
          If TypeOf(v) = gb.Object Then
            GridView1[r, 0].Text = v["entity"]

            If v.Exist("handle") Then
              If TypeOf(v["handle"]) = gb.Object Then
                GridView1[r, 1].Text = CStr(v["handle"][v["handle"].Max])
              Else
                GridView1[r, 1].Text = CStr(v["handle"])
              Endif
            Else
              GridView1[r, 1].Text = "<>"
            Endif

            If v.Exist("layer") Then
              If TypeOf(v["layer"]) = gb.Object Then
                GridView1[r, 2].Text = gcd.CurrentDrawing.cLayers[CStr(v["layer"][v["layer"].Max])]["name"]
              Else
                GridView1[r, 2].Text = gcd.CurrentDrawing.cLayers[CStr(v["layer"])]["name"]
              Endif
            Else
              GridView1[r, 2].Text = "<>"
            Endif

            GridView1[r, 3].Text = ""
            GridView1[r, 4].Text = ""

            If TypeOf(v["color"]) = gb.Object Then
              GridView1[r, 5].Text = v["color"][v["color"].Max]
            Else
              If TypeOf(v["color"]) = gb.Integer Then
                GridView1[r, 5].Text = v["color"]
              Else
                GridView1[r, 5].Text = ""
              Endif
            Endif
            Select v["entity"]
              Case "TEXT", "ATTRIB"
                GridView1[r, 6].Text = v["text_value"]
              Case "INSERT"
                sKey = v["block_header"][v["block_header"].Max]
                GridView1[r, 6].Text = gcd.CurrentDrawing.cBlocks[sKey]["name"]
              Case "CIRCLE", "ARC"
                GridView1[r, 6].Text = v["radius"]
              Case "LINE"
                d = Sqr((v["end"][0] - v["start"][0]) ^ 2 + (v["end"][1] - v["start"][1]) ^ 2 + (v["end"][2] - v["start"][2]) ^ 2)
                GridView1[r, 6].Text = CStr(d)

              Case "LWPOLYLINE"
                For i = 1 To v["points"].Count - 1
                  d = d + Sqr((v["points"][i][0] - v["points"][i - 1][0]) ^ 2 + (v["points"][i][1] - v["points"][i - 1][1]) ^ 2)
                Next
                GridView1[r, 6].Text = CStr(d)

              Case "MTEXT"
                GridView1[r, 6].Text = v["text"]

              Case "HATCH"
                GridView1[r, 6].Text = v["name"]

              Case Else
                GridView1[r, 6].Text = ""
            End Select
          Endif
          Inc r
        Next
      Endif

    Case "BLOCKS" '(BLOCKS_HEADERS)
      'Settings["Section/Selected"] = TreeView1.Key
      GridView1.Clear
      pnlFileData.Visible = False
      GridView1.Visible = True
      GridView1.Columns.Count = 2

      If gcd.CurrentDrawing.cModel.Exist(TreeView1.Key) Then
        GridView1.Rows.Count = gcd.CurrentDrawing.cModel[TreeView1.Key].Count
        GridView1.Columns[0].Text = ("Name")
        GridView1.Columns[1].Text = ("Handle")
        'GridView1.Columns[2].Text = ("Style")
        'GridView1.Columns[3].Text = ("Width")
        'GridView1.Columns[4].Text = ("Color")

        For Each v In gcd.CurrentDrawing.cModel[TreeView1.Key]
          If TypeOf(v) = gb.Object Then
            GridView1[r, 0].Text = v["name"]
            'GridView1[r, 1].Text = gcd.CurrentDrawing.cLayers[CStr(v["layer"][v["layer"].Max])]
            GridView1[r, 1].Text = CStr(v["handle"][v["handle"].Max])
            'GridView1[r, 3].Text = ""
            'GridView1[r, 4].Text = ""

            'If TypeOf(v["color"]) = gb.Object Then
            '  GridView1[r, 4].Text = v["color"][v["color"].Max]
            'Else
            '  If TypeOf(v["color"]) = gb.Integer Then
            '    GridView1[r, 4].Text = v["color"]
            '  Else
            '    GridView1[r, 4].Text = ""
            '  Endif
            'Endif
          Endif
          Inc r
        Next
      Endif

    Case Else
      If Starter.cEntities.Exist(TreeView1.Key) Then
        If Starter.cEntities[TreeView1.Key] = True Then
          Print TreeView1.Key
        Endif
      Endif

      'Case "LAYER", "ENTITY", "BLOCK"

  End Select

End

