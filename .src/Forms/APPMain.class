      stxEnty.Add(ent[dxf.codEntity])
    Endif
  Next
  For Each sEnty In stxEnty
    sPic = "./svg/entities/" & Lower(sEnty) & ".svg"
    If Exist(sPic) Then
      If Application.DarkTheme Then
        svg = Replace(File.Load(sPic), "#0066b3;", "#eeeeee;")
      Else
