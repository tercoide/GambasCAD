Public Sub Run(cin As Collection)

  Dim obj As Object
  Dim ictn As New Collection
  Dim mnu As Menu
  Dim tob As ToolButton
  Dim i As Integer
  Dim iSet As String
  Dim z As Integer
  'Dim ctr As Object
  Dim r As Integer
  Dim g As Integer
  Dim b As Integer
  Dim img As Image
  Dim sPic As String
  Dim svg As String
  '------------------------------------------------------------------------------
  '' Setting connection variables and more
  cex = cin

  adi = cin["AppDir"]           '' Program Directory.
  apc = cin["AppCfg"]           '' Program configuration file.
  dbc = cin["DbsCfg"]           '' Database configuration file.
  etx = cin["AppEdi"]           '' Default plain text editor.
  lgg = cin["AppLog"]           '' Application event log.
  '------------------------------------------------------------------------------
  iSet = xmg.GetVar("Desktop.Icons", apc)
  ictn = dsk.GNumix(iSet & "/")
  '------------------------------------------------------------------------------
  For Each mnu In Me.Menus
    For Each obj In mnu.Children
      ''Adding menu item in the alternative menu
      If obj.Visible = True Then
        Select mnu.Name
          Case "grpEntities"
            tob = New ToolButton(pnlEntities) As "entity"
            'tob = New ToolButton(ToolBar1) As "entity"
            z = 40 '48
          Case "grpTools"
            tob = New ToolButton(pnlEntities) As "tool"
            z = 40 '48
          Case "grpSmart"
            tob = New ToolButton(pnlSmart) As "tool"
            z = 40 '48

          Case "grpFile", "grpHelp"
            tob = New ToolButton(pnlFile) As "menuapp"
            z = 40 '32

          Case "grpOptions"
            tob = New ToolButton(pnlFile) As "menuapp"
            z = 40 '32

          Case "grpView"
            'tob = New ToolButton(pnlToolsH) As "tool"
            tob = New ToolButton(pnlFile) As "tool"
            z = 40 '32

        End Select

        With tob
          .Name = "tob" & obj.Tag & CStr(i)
          .Tag = obj.Tag
          .Tooltip = obj.Text
          .Enabled = obj.Enabled
          .AutoResize = False

          .W = z
          .H = z

          Select mnu.Name
            Case "grpFile", "grpOptions", "grpHelp" ', "grpView" ', "grpSmart", "grpEntities"
              If Exist(ictn[obj.Tag]) Then
                If Stat(ictn[obj.Tag]).Type = gb.File Or Stat(ictn[obj.Tag]).Type = gb.Link Then
                  tob.Picture = Image.Load(ictn[obj.Tag]).Stretch(z - 8, z - 8).Picture
                  .Border = True
                Else
                  tob.Picture = obj.Picture
                  .Border = True
                Endif
              Else
                tob.Picture = obj.Picture
                .Border = True
              Endif

            Case "grpEntities"
              sPic = "./svg/entities/" & obj.Tag & ".svg"
              If Exist(sPic) Then
                If Application.DarkTheme Then
                  svg = Replace(File.Load(sPic), "#0066b3;", "#eeeeee;")
                Else
                  svg = Replace(File.Load(sPic), "#0066b3;", "#000000;")
                Endif
                tob.Picture = Image.FromString(svg).Stretch(z - 8, z - 8).Picture
                'Else
                '  pic = Image.Load("./svg/colors/4.svg").Stretch(9, 9).Picture
              Endif
              'tob.Picture = obj.Picture.Image.Stretch(z - 8, z - 8).Picture
              .Border = True

            Case "grpSmart"
              sPic = "./svg/smart/" & obj.Tag & ".svg"
              If Exist(sPic) Then
                If Application.DarkTheme Then
                  svg = Replace(File.Load(sPic), "#0066b3;", "#eeeeee;")
                Else
                  svg = Replace(File.Load(sPic), "#0066b3;", "#000000;")
                Endif
                tob.Picture = Image.FromString(svg).Stretch(z - 8, z - 8).Picture
              Endif
              .Border = True

            Case "grpTools", "grpView"
              sPic = "./svg/tools/" & obj.Tag & ".svg"
              'If obj.Tag = "selection" Then
              'Print obj.Tag
              'Endif
              If Exist(sPic) Then
                If Application.DarkTheme Then
                  svg = Replace(File.Load(sPic), "#0066b3;", "#eeeeee;")
                Else
                  svg = Replace(File.Load(sPic), "#0066b3;", "#000000;")
                Endif
                svg = Highligh(sPic)
                tob.Picture = Image.FromString(svg).Stretch(z - 8, z - 8).Picture
              Endif
              .Border = True

          End Select

        End With

        Try obj.Picture = obj.Picture.Image.Stretch(22, 22).Picture
        Print obj.Tag

      Endif
      Inc i

    Next
  Next

  btnColors.Reparent(pnlFile)
  btnLtypes.Reparent(pnlFile)
  btnLayers.Reparent(pnlFile)
  btnWidths.Reparent(pnlFile)
  cboDrawing.Reparent(pnlFile)
  '  Panel6.Reparent(pnlFile)
  'cboLayers.Reparent(pnlFile)
  'tobLayers.Reparent(pnlFile)
  'cboWidths.Reparent(pnlFile)
  'cboDimSts.Reparent(pnlFile)

  AddLtypesPics()
  AddColorsPics()
  AddWidthsPics()

  btnLtypes.Picture = Starter.cStyles["0"][3].Picture
  btnLtypes.Tooltip = Starter.cStyles["0"][1]

  btnWidths.Picture = Starter.cWidths["1"][2].Picture
  btnWidths.Tooltip = Starter.cWidths["1"][0]

  If CurrentColor = 0 Then
    CurrentColor = 3
  Endif

  r = CInt(Split(Starter.ColorsRGB[CurrentColor], ",")[0])
  g = CInt(Split(Starter.ColorsRGB[CurrentColor], ",")[1])
  b = CInt(Split(Starter.ColorsRGB[CurrentColor], ",")[2])

  imgColor = New Image(btnColors.H - 2, btnColors.H - 2, Color.RGB(r, g, b), 0)
  img = dsk.ImageFrame(imgColor.Stretch(btnColors.W - 4, btnColors.H - 4))

  btnColors.Picture = img.Picture

  btnColors.Tooltip = ("Color") & ": " & CStr(CurrentColor)

  btnBounds.Picture = Image.FromString(Highligh("./svg/locks/bounds.svg")).Stretch(35, 35).Picture
  btnGrid.Picture = Image.FromString(Highligh("./svg/locks/grid.svg")).Stretch(35, 35).Picture
  btnOrtho.Picture = Image.FromString(Highligh("./svg/locks/ortho.svg")).Stretch(35, 35).Picture

  btnEditionMode.Picture = Image.FromString(Highligh("./svg/locks/table.svg")).Stretch(35, 35).Picture

  btnSelectionMode.Value = True
  btnSelectionMode.Picture = Image.FromString(Highligh("./svg/locks/tools.svg")).Stretch(35, 35).Picture

  btnMenuShow.Value = False

  TableView1.Rows.Height = 35

  SelectionMode()
  'pnlProperties.Visible = False
  'pnlIcons.Visible = True

  Me.Menus.Hide
  Me.Border = False
  Me.Show()

End

'' Change the color of the graphic objects within the svg file that is passed as a parameter. For this, it takes into account the desktop theme and if it is a dark theme or not.

Public Function Highligh(sPic As String) As String

  Dim svg As String

  If Exist(sPic) Then
    If Application.DarkTheme Then
      svg = Replace(File.Load(sPic), "#0066b3;", "#eeeeee;")
    Else
      svg = Replace(File.Load(sPic), "#0066b3;", "#000000;")
    Endif
  Endif

  Return svg

End

