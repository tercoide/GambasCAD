    'glx.ARC(100, 0, Pi, Color.red)
    'glx.ARC(100, 0, Pi, Color.red)

    ' glx.DrawLines(flxTrimmedLine, color.blue)
    ' glx.DrawLines([0, 20, 0, -20], color.blue)
    ' glx.DrawLines([100, 20, 100, -20], color.blue)
