Public Sub Limits(e As Entity)

    Dim e2 As Entity
    Dim flxPoly, flxLimits As Float[]
    Dim flxLimitsMax As Float[]

    flxLimitsMax = [1e100, 1e100, -1e100, -1e100]
    Select Case e.Gender
        Case "HATCH"
            Dim h As Hatch
            h = e.pBlock
            For Each flxPoly In h.Polylines
                flxLimits = puntos.Limits(flxPoly)
                puntos.LimitsMax(flxLimitsMax, flxLimits)

            Next

        Case "INSERT"
            For Each e2 In e.pBlock.entities
                Limits(e2)
                flxLimits = e2.Limits

                puntos.LimitsMax(flxLimitsMax, flxLimits)
            Next
        Case Like "DIM*"
            For Each e2 In e.pBlock.entities
                Limits(e2)
                flxLimits = e2.Limits
                puntos.LimitsMax(flxLimitsMax, flxLimits)
            Next
        Case "ATTDEF", "SEQEND"

        Case Else
            If e.Polygon.Count > 0 Then
                flxLimits = puntos.Limits(e.Polygon)
            Else If e.PolyLine.Count > 0 Then
                flxLimits = puntos.Limits(e.PolyLine)
                If flxLimits[0] > 1e10 Then Stop

            Else If e.P.Count > 0 Then
                flxLimits = puntos.Limits(e.P)
            Else
                flxLimits = flxLimitsMax

            Endif
            flxLimitsMax = flxLimits

    End Select

    'If flxLimitsMax[3] > 5000 Then Stop
    e.Limits[0] = flxLimitsMax[0]
    e.Limits[1] = flxLimitsMax[1]
    e.Limits[2] = flxLimitsMax[2]
    e.Limits[3] = flxLimitsMax[3]
    'Return flxLimitsMax

End

'' Determines if the entity was selected by a POLY surrounding al points
'' by default, if ALL points are selected, it can.
Public Function SelFullPoly(eTesting As Entity, Poly As Float[]) As Boolean

    Dim ii As Integer, puedo As Boolean
    Dim TestX, TestY As Float
    Dim i As Integer

    Dim ePart As Entity

    Select Case eTesting.Gender

        Case Like "DIM*", "INSERT"
            For Each ePart In eTesting.pBlock.entities
                If Not SelFullPoly(ePart, poly) Then Return False
            Next
        Case Else

            ' Si tengo un bounding poligon, entonces verifico que todos los puntos esten dentro
            If eTesting.Polygon.Count > 0 Then

                Return puntos.isInsIdePolygons(eTesting.Polygon, POLY)

            Else If eTesting.PolyLine.Count > 0 Then
                Return puntos.isInsIdePolygons(eTesting.PolyLine, pOLY)

            Else

                Return puntos.isInsIdePolygons(eTesting.P, POLY)

            End If

    End Select

End

'' Determines if the entity
'' by default, if ANY point is selected, it can.
Public Function SelPartialPoly(eTesting As Entity, Poly As Float[]) As Boolean

    Dim ii As Integer, puedo As Boolean = False
    Dim oLoop As Hatch, flxPoly As Float[]
    Dim TestX, TestY As Float
    Dim i As Integer

    Dim ePart As Entity

    Select Case eTesting.Gender

        Case Like "DIM*", "INSERT"
            For Each ePart In eTesting.pBlock.entities
                puedo = SelFullPoly(ePart, poly)
                If puedo Then Break
            Next

        Case "Hatch"

            'For Each oLoop In eTesting.pBlock

            For Each flxPoly In eTesting.pBlock.Polylines

                puedo = puntos.isInsIdePolygons(flxPoly.Polygon, POLY)
                If puedo Then Break

            Next
            'Next

        Case Else

            ' Si tengo un bounding poligon, entonces verifico que todos los puntos esten dentro
            If eTesting.Polygon.Count > 0 Then

                ' Si tengo un bounding poligon, entonces verifico que alguna linea lo cruce
                For i = 0 To eTesting.Polygon.max Step 2
                    If puntos.isInsIde(poly, eTesting.Polygon[i], eTesting.PolyLine[i + 1]) Then
                        Return True
                    Endif
                Next

            Else If eTesting.PolyLine.Count > 0 Then

                For i = 0 To eTesting.PolyLine.max Step 2
                    If puntos.isInsIde(poly, eTesting.PolyLine[i], eTesting.PolyLine[i + 1]) Then
                        Return True
                    Endif
                Next

            Else
                ' si cualquier linea cruza alguna linea de la eentiidad, esta queda seleccionada

                For i = 0 To eTesting.p.max Step 2
                    If i + 1 > eTesting.p.max Then Break
                    If i / 2 > eTesting.Psel.Max Then Break
                    If puntos.isInsIde(poly, eTesting.P[i], eTesting.P[i + 1]) Then
                        eTesting.PSel[i / 2] = True
                        puedo = True
                    End If

                Next

            End If

    End Select

    If puedo Then

        Return True
    Else
        Return False
    End If

End
