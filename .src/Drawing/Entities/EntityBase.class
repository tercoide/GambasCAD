Public Function DeExtrude(e As Entity)

    If (e.Extrusion[2] = -1) Then
        gcd.CCC[e.gender].Scale(e, -1, 1)
        e.Extrusion[0] = 0
        e.Extrusion[1] = 0
        e.Extrusion[2] = 1
    Endif

