Public Gender As String = ""                '' Type of entity
Public P As New Float[]                     '' X,Y pairs
Public sParam As New String[]               '' Array of Strings
Public fParam As New Float[]                '' Array of floats
Public iParam As New Integer[]              '' Array of integers
Public Colour As Integer                    '' CAD color code
Public LineWidth As Integer = -3            '' This is it
Public pBlock As Variant                    '' Pointer to Block or Hatch (or null)
Public LineType As LineType                 '' 0=continuous, 1=dashed from flxDash
Public pLayer As Layer
Public pStyle As TextStyle                  ''
Public pDimStyle As DimStyle                ''
